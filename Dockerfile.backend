FROM node:20
RUN apt-get update && apt-get install -y curl libvips && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
ENV NODE_ENV=production
ENV PORT=3001
EXPOSE 3001
HEALTHCHECK --interval=30s --timeout=10s --start-period=20s --retries=3 CMD curl -f http://localhost:3001/api/health || exit 1
CMD ["npx","tsx","api/server.ts"]